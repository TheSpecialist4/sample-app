<%= form_for(@micropost) do |f| %>
<!-- passing a hash of object to error messages makes a variable object in the error messages partial which can be used to access errors associated with the given object type -->
	<%= render 'shared/error_messages', object: f.object %>
	<div>
		<%= f.text_area :content, placeholder: "Compose new tweet...", style: "width: 100%; height: 120px; border: 1px solid #c8c8c8; border-radius: 2%" %>	
	<%= f.submit "Post", class: "btn btn-large btn-primary" %>
	</div>
<% end %>
