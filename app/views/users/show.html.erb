<div class="row">
	<aside class="col-md-4">
		<section>
			<h1>
				<%= image_for @user %>
				<%= @user.name %>
			</h1>		
		</section>
	</aside>
	<div class="col-md-8">
		<% if @user.microposts.any? %> 
		<h3>Tweets (<%= @user.microposts.count %>)</h3>
		<ol class="microposts">
			<%= render partial: 'microposts/micropost', collection: @microposts.reverse %>
		</ol>
		<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>